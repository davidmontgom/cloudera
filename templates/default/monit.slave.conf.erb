check process hadoop-hdfs-datanode
  with pidfile "/var/run/hadoop-hdfs/hadoop-hdfs-datanode.pid"
  start program = "/etc/init.d/hadoop-hdfs-datanode start"
  stop program = "/etc/init.d/hadoop-hdfs-datanode stop"
  
check process hbase-regionserver
  with pidfile "/var/run/hbase/hbase-hbase-regionserver.pid"
  start program = "/etc/init.d/hbase-regionserver start"
  stop program = "/etc/init.d/hbase-regionserver stop"
  
check process hbase-thrift
  with pidfile "/var/run/hbase/hbase-hbase-thrift.pid"
  start program = "/etc/init.d/hbase-thrift start"
  stop program = "/etc/init.d/hbase-thrift stop"